<%- include('../header') %>
<% var d = new Date(); a = d.toString(); %>

<form method="POST" action="/publicacoes/editar/<%=publicacao.id%>">
    <div class="form-group">
          <label for="exampleInputEmail1">Titulo</label><br>
          <input class="form-control" placeholder="Insira o nome da da publicacao" type="text" name="publicacao" value="<%=publicacao.publicacao%>"/>
          <small id="emailHelp" class="form-text text-muted">Insira o titulo do post.</small>
        </div>
        <div class="form-group">
                <label for="exampleInputEmail1">Publicacao</label><br>
                <textarea class="form-control" name="texto" rows="10" cols="30" placeholder="Insira o Texto da publicacao" name="texto"><%=publicacao.texto%></textarea>
                <small id="emailHelp" class="form-text text-muted">Insira o texto do post.</small>
        </div>
        <div class="form-group">
                <label for="exampleInputEmail1">Categoria</label><br>
                <select class="custom-select custom-select-lg mb-3" name="categoriapub">
                        <option value="" disabled selected>Select your option</option>
                        <% categorias.forEach(categoria => { %>
                            <option value="<%= categoria.categoria %>"><%= categoria.categoria %></option>
                        <% })  %>
                </select>
                <small id="emailHelp" class="form-text text-muted">Insira a categoria.</small>
        </div>
        <div class="form-group">
                <label for="exampleInputEmail1">Data Criacao</label><br>
                <input class="form-control"  type="text" placeholder="<%=a%>" >
        </div>
        

        <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%- include('../footer') %>

